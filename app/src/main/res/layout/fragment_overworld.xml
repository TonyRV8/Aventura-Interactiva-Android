<?xml version="1.0" encoding="utf-8"?>
<!-- Fragment del Overworld con diseño de paisaje verde -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEEB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🌍 OVERWORLD"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#2D5016"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explora el mundo superior"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="32dp" />

        <!-- Puntos de Interés -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Puntos de Interés"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2D5016"
            android:layout_marginBottom="16dp" />

        <!-- Botón POI 1 -->
        <Button
            android:id="@+id/btn_poi_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🌳 Bosque de Robles"
            android:textSize="16sp"
            android:backgroundTint="#6B8E23"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

        <!-- Botón POI 2 -->
        <Button
            android:id="@+id/btn_poi_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⛰️ Montañas"
            android:textSize="16sp"
            android:backgroundTint="#8B7355"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

        <!-- Botón POI 3 -->
        <Button
            android:id="@+id/btn_poi_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🌊 Océano Profundo"
            android:textSize="16sp"
            android:backgroundTint="#1E90FF"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

        <!-- Botón POI 4 -->
        <Button
            android:id="@+id/btn_poi_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏰 Aldea"
            android:textSize="16sp"
            android:backgroundTint="#D2691E"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp"
            android:padding="16dp" />

        <!-- Portal al Nether -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🌀 Portales"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4B0082"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portal al Nether"
            android:textSize="16sp"
            android:textColor="#8B008B"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- ImageView clickeable para Nether (GIF) - Tamaño original -->
        <ImageView
            android:id="@+id/img_portal_nether"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nether"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Portal al Nether" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portal al End"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- ImageView clickeable para End (PNG) - Tamaño original -->
        <ImageView
            android:id="@+id/img_portal_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/end"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Portal al End" />

    </LinearLayout>

</ScrollView>